<!DOCTYPE html>
<html>
  <head>
    <title>JomTolong</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://unpkg.com/swiper/css/swiper.min.css' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css2?family=Asap:wght@400;700&display=swap' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="logo">
        <%= image_tag 'logo.png' %>
      </div>
    </header>

    <%= yield %>

    <footer>
      <div class="logo">
        <%= image_tag 'logo.png' %>
      </div>
    </footer>

    <%= javascript_include_tag 'https://unpkg.com/swiper/js/swiper.min.js' %>
    <script>
        var swiper1 = new Swiper ('.swiper1', {
            direction: 'horizontal',
            loop: 'false',
            centeredSlides: 'true',
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
		          el: '.swiper-pagination'
            },
            breakpoints: {
              500: {
                slidesPerView: 2,
                spaceBetween: 140
              },
              575: {
                slidesPerView: 2,
                spaceBetween: 100
              },
              767: {
                slidesPerView: 3,
                spaceBetween: 200
              },
              992: {
                slidesPerView: 4,
                spaceBetween: 245
              },
              1200: {
                slidesPerView: 5,
                spaceBetween: 270
              }
            }
        })

        var swiper2 = new Swiper ('.swiper2', {
            direction: 'horizontal',
            loop: 'false',
            centeredSlides: 'true',
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
		          el: '.swiper-pagination'
            },
            breakpoints: {
              500: {
                slidesPerView: 2,
                spaceBetween: 140
              },
              575: {
                slidesPerView: 2,
                spaceBetween: 100
              },
              767: {
                slidesPerView: 3,
                spaceBetween: 200
              },
              992: {
                slidesPerView: 4,
                spaceBetween: 245
              },
              1200: {
                slidesPerView: 5,
                spaceBetween: 270
              }
            }
        })
    </script>
  </body>
</html>
