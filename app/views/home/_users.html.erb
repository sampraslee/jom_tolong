<div class="swiper-container swiper1">
    <div class="swiper-wrapper">
        <% @users.each do |user| %>
            <div class="swiper-slide">
                <div class="card">
                    <div class="card-img"></div>
                    <div class="card-text">
                        <p class="tag"><%= user.helps.last.help_type %></p>         
                        <p class="card-heading"><%= user.name %></p>
                        <p class="card-subheading"><%= user.helps.last.district.name %>, <%= user.helps.last.district.state.name %></p>
                        <p class="card-paragraph"><%= user.helps.last.description %></p>
                    </div>
                    <a class="card-link">Help</a>
                </div>
            </div>
        <% end %>
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
</div>